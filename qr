<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>QR 코드 리더</title>
</head>
<body>
  <h1>QR 코드 파라미터:</h1>
  <p id="output"></p>

  <h2>QR 코드 이미지:</h2>
  <img id="qr" alt="QR Code" />

  <script>
    const params = new URLSearchParams(window.location.search);
    const text = params.get("text");
    const decoded = text ? decodeURIComponent(text) : "값이 없습니다.";

    document.getElementById("output").textContent = decoded;

    if (text) {
      const qrUrl = "https://chart.googleapis.com/chart?chs=200x200&cht=qr&chl=" + encodeURIComponent(window.location.href);
      document.getElementById("qr").src = qrUrl;
    }
  </script>
</body>
</html>
